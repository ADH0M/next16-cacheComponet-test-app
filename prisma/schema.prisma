generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Embedded document
type Address {
  city  String
  state String
}

// Embedded document for image metadata
type Image {
  url    String
  alt    String?
  isMain Boolean @default(false)
}

// Embedded document for translations
type LocalizedString {
  en String
  ar String
}

// ================================
// MAIN MODELS
// ================================
model User {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  email    String     @unique
  name     String?
  address  Address?
  password String?
  ShopCard ShopCard[]
  Favorite Favorite[]
}

model Product {
  id          String           @id @default(auto()) @map("_id") @db.ObjectId
  name        LocalizedString
  description LocalizedString?
  price       Float
  stock       Int              @default(0)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?   @db.ObjectId

  images Image[]
  tags   String[]
}

model Category {
  id          String           @id @default(auto()) @map("_id") @db.ObjectId
  name        LocalizedString
  description LocalizedString?
  products    Product[]
}

model ShopCard {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  user   User?   @relation(fields: [userId], references: [id])
  userId String? @db.ObjectId
  items  Json // ممكن تخزن [{productId, quantity}]
  total  Float   @default(0)
}

model Favorite {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  user     User?    @relation(fields: [userId], references: [id])
  userId   String?  @db.ObjectId
  products String[] // قائمة من productIds
}
